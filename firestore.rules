/**
 * FIRESTORE SECURITY RULES
 * 
 * To fix the "Missing or insufficient permissions" error,
 * you need to update your Firestore security rules in the Firebase Console.
 * 
 * Go to: https://console.firebase.google.com
 * Select your project
 * Go to: Firestore Database > Rules
 * Replace the rules with the following:
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read all TEF tasks (they're public)
    match /tefTasks/{taskId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Allow users to read/write their own essays
    match /userEssays/{essayId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Allow users to read/write their own custom collections
    match /customCollections/{collectionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Allow users to read/write sentences (stored separately for large collections)
    match /sentences/{sentenceId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Allow users to read/write their own progress
    match /userProgress/{progressId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Allow users to read/write their own files
    match /userFiles/{fileId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      allow update: if request.auth != null && request.auth.uid == resource.data.uid;
      allow delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }
  }
}

